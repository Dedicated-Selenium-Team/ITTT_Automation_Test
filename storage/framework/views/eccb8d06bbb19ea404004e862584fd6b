<?php $__env->startSection('content'); ?>
<div class="timesheet-wrapper">
	<?php
	  if(count($created_project_timesheet) > count($created_activity_timesheet)) {
	  	$created_timesheet = $created_project_timesheet;
	  } else {
	  	$created_timesheet = $created_activity_timesheet;
	  }

	  if(!isset($created_timesheet[0])) { ?>
	    <div class="new-timesheet">
			  <a href="/create-timesheet/<?php echo date('Y-m-d'); ?>">Create New Timesheet</a>
		  </div>
	<?php }
	  if(count($pending_project_timesheets) > count($pending_activity_timesheets)) {
	  	$timesheets = $pending_project_timesheets;
	  } else {
	  	$timesheets = $pending_activity_timesheets;
	  }
	?>

	<div class="timesheet-date">
		<span id="create-prev-timesheet-wrapper">Create Previous Timesheet</span>
		<div class="hide-select-date-wrapper">
			<span>Select date: </span>
			<input class="selected-date" type="date" />
			<span id="create-prev-timesheet-btn">Create</span>
			<input type="hidden" class="csrf-token" value="<?php echo e(csrf_token()); ?>" />
			<span id="timesheet-created-message"></span>
		</div>
	</div>

	<table>
	  <thead>
	    <tr>
		    <th>#</th>
		    <th>Pending Timesheets</th>
		    <th>Edit</th>
		    <th>Submit</th>
		    <th>Delete</th>
	    </tr>
	  </thead>
	  <tbody>
	    <?php if($timesheets): ?>
	      <?php $count = 1; ?>
		    <?php foreach($timesheets as $timesheet): ?>
			    <tr>
			     <td><?php echo e($count); ?></td>
			     <td><?php echo e($timesheet->saved_date); ?></td>
			     <td><a href="/edit-timesheet/<?php echo e($timesheet->user_id); ?>/<?php echo e($timesheet->saved_date); ?>" class="edit">Edit</a></td>
			     <td>
					   <?php echo Form::open(array('url' => array('submit-timesheet', $timesheet->user_id, $timesheet->saved_date))); ?>


				     <?php echo Form::submit('Submit',  array('class' => 'submit-btn')); ?>


				     <?php echo Form::close(); ?>

			     </td>
			     <td>
					   <?php echo Form::open(array('url' => array('delete-timesheet', $timesheet->user_id, $timesheet->saved_date))); ?>


				     <?php echo Form::submit('Delete'); ?>


				     <?php echo Form::close(); ?>

			     </td>
			    </tr>
			    <?php $count++; ?>
			  <?php endforeach; ?>
		  <?php endif; ?>
	  </tbody>
	</table>
</div>
<?php $__env->stopSection(); ?>

<?php echo $__env->make('master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>